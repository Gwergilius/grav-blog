{% extends 'partials/langswitcher-logic.html.twig' %}

{% block language_block_start %}
<div class="language-selector-simple">
    <select onchange="if(this.value) window.location.href = this.value;" class="language-dropdown">
        <option value="">{{ 'PLUGIN_LANGSWITCHER.SWITCH_LANGUAGE'|t|default('Select Language') }}</option>
{% endblock %}

{% block language_item %}
    {% if show_language %}
            {% set page_route = page.rawRoute() == '/' ? '/' : page.rawRoute() %}
            {% set url = lang_url ~ uri.params ~ (uri.query|length > 1 ? '?' ~ uri.query) %}
            <option value="{{ url }}" class="external {{ active_class }}"
                {% if language == langswitcher.current %} selected="selected"{% endif %}>
                {% include 'partials/langswitcher-' ~ display_format ~ '.html.twig' %}
            </option>
    {% endif %}
{% endblock %}

{% block language_block_end %}
    </select>
</div>
{% endblock %}
